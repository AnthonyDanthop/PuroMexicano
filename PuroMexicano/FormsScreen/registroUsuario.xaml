<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="PuroMexicano.FormsScreen.registroUsuario" 
             BackgroundColor = "White">
    <ContentPage.Content>
        <ScrollView Orientation = "Vertical">
            <Grid VerticalOptions = "FillAndExpand">
                <StackLayout Padding = "30"
                             Spacing = "10"
                             VerticalOptions = "Center">
                     <Image 
                        Source = "puromex.png"
                        HeightRequest = "130"
                     ></Image>
                    <Grid x:Name="controlGrid1" 
                          RowSpacing="0" 
                          ColumnSpacing="5" 
                          VerticalOptions = "Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="3" />
                        <ColumnDefinition Width="8" />
                            
                    </Grid.ColumnDefinitions>
                    <BoxView VerticalOptions = "CenterAndExpand"
                             BackgroundColor = "#EE7426"
                             Grid.Row = "0"
                             Grid.Column = "0"
                    ></BoxView>
                    <Label Text = "EMAIL"
                           Grid.Row = "0"
                           Grid.Column = "1"
                           FontSize="18" 
                           VerticalTextAlignment = "Center"
                    ></Label>
                    <BoxView VerticalOptions = "CenterAndExpand"
                             BackgroundColor = "#EE7426"
                             Grid.Row = "1"
                             Grid.Column = "0"
                    ></BoxView>
                    <Entry x:Name = "eEmail" 
                           Placeholder = "Tu direccion de correo"
                           Text="{Binding User.Email, Mode=TwoWay}"
                           Grid.Row = "1"
                           Grid.Column = "1"
                           ></Entry>
                    <BoxView VerticalOptions = "CenterAndExpand"
                             BackgroundColor = "#15836B"
                             Grid.Row = "2"
                             Grid.Column = "0"
                    ></BoxView>
                    <Label Text = "NOMBRE"
                           FontSize="18" 
                           Grid.Row = "2"
                           Grid.Column = "1"
                           VerticalTextAlignment = "Center"
                    ></Label>
                    <BoxView VerticalOptions = "CenterAndExpand"
                             BackgroundColor = "#15836B"
                             Grid.Row = "3"
                             Grid.Column = "0"
                    ></BoxView>
                    <Entry x:Name = "eUsuario" 
                           Placeholder = "Ingresa tu nombre"
                           Grid.Row = "3"
                           Grid.Column = "1"

                           ></Entry>
                     <BoxView VerticalOptions = "CenterAndExpand"
                             BackgroundColor = "#EBD50A"
                             Grid.Row = "4"
                             Grid.Column = "0"
                    ></BoxView>
                    <Label Text = "CONTRASEÑA"
                           Grid.Row = "4"
                           Grid.Column = "1"
                           FontSize="18" 
                           VerticalTextAlignment = "Center"
                    ></Label>
                    <BoxView VerticalOptions = "CenterAndExpand"
                             BackgroundColor = "#EBD50A"
                             Grid.Row = "5"
                             Grid.Column = "0"
                    ></BoxView>
                    <Entry Text="{Binding User.Password, Mode=TwoWay}" 
                           x:Name="ePassword" 
                           TextColor="Gray" 
                           Placeholder="Tu contraseña" 
                           PlaceholderColor="Gray" 
                           IsPassword="True" 
                           FontSize="18" 
                           HorizontalTextAlignment="Start"

                           Grid.Row = "5"
                           Grid.Column = "1"
                    ></Entry>
                    </Grid>
                          <BoxView VerticalOptions = "CenterAndExpand"
                         BackgroundColor = "Transparent"
                          HeightRequest = "5"
                ></BoxView>
                <Label BackgroundColor = "Black" 
                           HeightRequest = "0.5">
                </Label>
                <Button Text = "REGISTRARSE" 
                   BackgroundColor = "White" 
                   BorderColor = "Black"
                   BorderWidth = ".5"
                   TextColor = "Black"
                   VerticalOptions = "Center" 
                   HorizontalOptions = "Center" 

                   WidthRequest = "200" 
                   Clicked="OnButtonClicked">
                   </Button>
                </StackLayout>
                <Grid x:Name="barr" 
                      RowSpacing="0" 
                      ColumnSpacing="0"
                      VerticalOptions = "End"
                      >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <BoxView VerticalOptions = "CenterAndExpand"
                             BackgroundColor = "#DF1082"
                             Grid.Row = "0"
                             Grid.Column = "0"
                    ></BoxView>
                    <BoxView VerticalOptions = "CenterAndExpand"
                             BackgroundColor = "#15836B"
                             Grid.Row = "0"
                             Grid.Column = "1"
                    ></BoxView>
                    <BoxView VerticalOptions = "CenterAndExpand"
                             BackgroundColor = "#EBD50A"
                             Grid.Row = "0"
                             Grid.Column = "2"
                    ></BoxView>
                    <BoxView VerticalOptions = "CenterAndExpand"
                             BackgroundColor = "#EE7426"
                             Grid.Row = "0"
                             Grid.Column = "3"
                    ></BoxView>
                </Grid>
             </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
